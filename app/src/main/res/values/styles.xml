<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/wrapper_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/wrapper_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/wrapper_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/wrapper_vertical_margin</item>
    </style>

    <style name="LLayWrapper" parent="Wrapper">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LLayRowWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WeightRowCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WeightRowLeftCell" parent="WeightRowCell">
        <item name="android:gravity">end</item>
    </style>

    <style name="TvTitleBar" parent="LLayRowWrapper">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BtnSubmitBar">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <!-- Book -->
    <style name="BookListTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_list_title</item>
    </style>

    <style name="BookListDtCreated">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BookDetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_detail_title</item>
    </style>

    <style name="BookDetailDtCreated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BookDetailUnderline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/underline_height</item>
        <item name="android:background">@android:color/background_dark</item>
    </style>

    <style name="BookDetailDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/wrapper_vertical_margin</item>
        <item name="android:textSize">@dimen/text_size_detail_title</item>
    </style>

    <!-- RoundedImageView -->
    <style name="RoundedImageViewRow">
        <item name="android:layout_width">@dimen/rounded_image_view_layout_width</item>
        <item name="android:layout_height">@dimen/rounded_image_view_layout_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/wrapper_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/wrapper_vertical_margin</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/totoro</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <!-- Browser JS Bridge -->
    <style name="BrowserWebView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarSize">0dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="BrowserProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/browser_progressbar_height</item>
        <item name="android:progress">16</item>
        <item name="android:progressDrawable">@drawable/browser_pbar_bg</item>
    </style>

    <style name="BrowserReceivedError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/browser_received_error</item>
        <item name="android:textSize">@dimen/text_size_error_tips</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- File Sandbox SdCard -->
    <style name="FileIoRowWrapper" parent="LLayRowWrapper"></style>

    <style name="FileIoLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FileIoRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Util Registry Or Db Registry -->
    <style name="RegistryLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="RegistryRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="RegistryRgBooleanGroup" parent="RegistryRightCell">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RegistryRbBooleanLeftCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RegistryRbBooleanRightCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/wrapper_horizontal_margin</item>
        <item name="android:checked">true</item>
    </style>

    <!-- Util DimensionConverter -->
    <style name="UtilDimensionConverterRowWrapper" parent="LLayRowWrapper"></style>

    <style name="UtilDimensionConverterLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="UtilDimensionConverterCenterCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UtilDimensionConverterRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="UtilDimensionConverterRightEtCell" parent="UtilDimensionConverterRightCell">
        <item name="android:inputType">number</item>
    </style>

    <!-- State Version -->
    <style name="StateVersionRowWrapper" parent="LLayRowWrapper"></style>

    <style name="StateVersionLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StateVersionRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">2</item>
    </style>

    <!-- State Contacts -->
    <style name="StateContactsRowWrapper" parent="LLayRowWrapper"></style>

    <style name="StateContactsLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StateContactsRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">2</item>
    </style>

    <!-- State Display Pixels -->
    <style name="StateDisplayPixelsRowWrapper" parent="LLayRowWrapper"></style>

    <style name="StateDisplayPixelsLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">3</item>
    </style>

    <style name="StateDisplayPixelsRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- State LocationState -->
    <style name="StateLocationStateRowWrapper" parent="LLayRowWrapper">
    </style>

    <style name="StateLocationStateLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">6</item>
    </style>

    <style name="StateLocationStateRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Ht Network Change Receiver -->
    <style name="HtNetworkChangeReceiverRowWrapper" parent="LLayRowWrapper">
    </style>

    <style name="HtNetworkChangeReceiverLeftCell" parent="WeightRowLeftCell">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="HtNetworkChangeReceiverRightCell" parent="WeightRowCell">
        <item name="android:layout_weight">1</item>
    </style>

</resources>
